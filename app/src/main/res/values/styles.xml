<resources>

    <!-- Base application theme. -->
    <!-- PLEASE DON'T CHANGE AppTheme-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBgSplash</item>
        <item name="colorPrimaryDark">@color/colorBgSplash</item>
        <item name="colorAccent">@color/colorBgSplash</item>
    </style>
    <style name="Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBgSplash</item>
        <item name="colorPrimaryDark">@color/colorBgSplash</item>
        <item name="colorAccent">@color/colorBgSplash</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ImageButtonBg" parent="android:Widget.ImageButton">
        <item name="android:hint">Upload Bukti</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:radius">20dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>
</resources>
