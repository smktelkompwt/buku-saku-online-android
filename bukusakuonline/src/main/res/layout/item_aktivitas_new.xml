<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/point_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:fontFamily="@font/roboto"
                android:gravity="center"
                tools:text="@string/_1"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rayhan Rafiud Darojat"
                android:layout_marginTop="15dp"
                tools:fontFamily="@font/roboto"
                android:textColor="@color/colorHitam"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/date_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="10sp"
                tools:fontFamily="@font/roboto"
                tools:text="32 Febrari 2020, Pukul 07.04"
                tools:ignore="SmallSp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/desc_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="12sp"

                    tools:fontFamily="@font/roboto"
                    android:maxLength="11"
                    tools:text="Kode : A-01"/>
                <TextView
                    android:id="@+id/lihat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@string/lihat_detail"
                    android:textStyle="bold"
                    tools:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:background="#E4E4E4"
        android:layout_marginTop="5dp"
        android:layout_gravity="bottom" />
</FrameLayout>